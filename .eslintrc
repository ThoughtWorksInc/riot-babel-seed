{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "destructuring": true,
    "defaultParams": true
  },
  "rules": {
    "curly": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "comma-spacing": 0,
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "key-spacing": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-shadow": 0,
    "no-shadow-restricted-names": 0,
    "no-extend-native": 0,
    "no-var": 2,
    "no-eval": 0,
    "strict": 0,
    "no-use-before-define": 0,
    "new-cap": 0,
    "eol-last": 0,
    "quotes": [
      2,
      "single"
    ],
    "semi": 0,
    "space-unary-ops": 0,
    "space-infix-ops": 0,
    "consistent-return": 0,
    "handle-callback-err": [
      2,
      "^(err|error|anySpecificError)$"
    ]
  }
}