.gallery-slide {
  position: absolute;
  display: block;

  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  overflow: hidden;
}

.gallery-slide__item {
  outline: none;
  height: 100%;
  color: #fff;
  position: relative;

  & > img {
    opacity: 1 !important; // fix the bug issue
  }
}

.gallery-slide__number {
  position: absolute;
  z-index: 200;
  color: #fff;
}

.app--desktop {
  .gallery-slide__nav {
    display: block;
  }
}

.gallery-slide__nav {

  display: none;

  .slick-prev,
  .slick-next {
    display: none;
  }

  .slick-arrow {
    position: absolute;
    top: 0;
    bottom: 0;
    z-index: 100;
    width: 10%;

    &:hover {
      cursor: pointer;
      background-color: rgba(0, 0, 0, 0.3)
    }

    .icon {
      position: absolute;
      top: 50%;
      width: 100%;
      text-align: center;
      font-size: 24px;
      height: 24px;
      margin-top: -12px;
      color: #fff;
    }

    &.slick-disabled {
      opacity: 0;
      display: none !important;
    }

    &.slick-prev {
      left: 0;
    }

    &.slick-next {
      right: 0;
    }

  }

}

.gallery-slide__wrapper {

  position: relative;
  background-color: #000;

  &.slick-slider,
  .slick-list {
    position: absolute;
    display: block;

    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

  .slick-track {
    height: 100%;
    .gallery-slide__item {
      display: block;
      float: left;
    }
  }

}


