.qrcode {
  position: relative;
  display: block;

  .qrcode__inner {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background-color: #fff;
    border: 1px solid #ddd;

    & > img {
      position: absolute;
      width: 100%;
      &:hover {
        cursor: pointer;
      }
    }
  }

  .qrcode__link {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    display: block;
    margin-top: -7px;
    font-size: 14px;
    line-height: 14px;
    text-align: center;
  }

  .modal-body {
    img {
      width: 100%;
    }
  }
}